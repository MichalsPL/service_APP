{% extends "ServiceBundle:Manager:base_manager.html.twig" %}

{% block page_content %}



<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path('Customer_registration') }}" {{ form_enctype(form) }} method="POST">
                        <fieldset>

                            <div class="form-group">
                                {{ form_widget(form) }}                   

                                <div>
                                    <input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="Zatwierdz"/>
                                </div>
                                {{ form_end(form) }}




                            </div>


                            <!-- Change this to a button or input when using this as a form -->
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock page_content %}

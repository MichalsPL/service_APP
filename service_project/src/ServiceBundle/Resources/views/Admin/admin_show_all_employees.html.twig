{% extends "ServiceBundle:Admin:base_admin.html.twig" %}
{% block page_content %}

    tu będzie strona startowa

    {% if admins is defined %}
        {%if admins|length >0 %}
            <h4>Widzisz Wszystkich Adminów</h4>
            <h6> klikinj w użytkownika żeby zobaczyć szczegóły</h6>
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Numer Telefonu</th>
                        <th>Email</th>

                    </tr>
                </thead>
                <tbody>
                    {% for admin in admins%}
                        {% set counter = ( counter | default(0) ) + 1 %}
                        <tr class="
                            {% if  counter % 2 == 0%}
                                even gradeC
                            {% else%}
                                odd gradeX 
                            {%endif%}
                            " name="click" data-href="{{ path('admin_show_employee', { 'employeeId': admin.id }) }}">
                            <td>{{admin.name}}</td>
                            <td>{{admin.surname}}</td>
                            <td>{{admin.phoneNo}}</td>
                            <td>{{admin.email}}</td>
                        </tr>
                    {%endfor%}
                </tbody>
            </table>
        {%else%}
            <h4>Nie ma żadnych adminów w bazie</h4>
        {%endif%}         
    {%endif%}     


{% extends "ServiceBundle:Manager:base_manager.html.twig" %}
{% block page_content %}

    <div class="panel-body">


        {% if customers is defined %}
            {%if customers|length >0 %}
                <h4>Widzisz </h4>
                <h6> klikinj w zecenie żeby zobaczyć szczegóły</h6>
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                            <th>Numer Telefonu</th>
                            <th>Email</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for customer in customers%}
                            {% set counter = ( counter | default(0) ) + 1 %}
                            <tr class="
                                {% if  counter % 2 == 0%}
                                    even gradeC
                                {% else%}
                                    odd gradeX 
                                {%endif%}
                                " name="click" data-href="{{ path('manager_show_customer', { 'customerId': customer.id }) }}">
                                <td>{{customer.name}}</td>
                                <td>{{customer.surname}}</td>
                                <td>{{customer.phoneNo}}</td>
                                <td>{{customer.email}}</td>
                            </tr>
                        {%endfor%}
                    </tbody>
                </table>
            {%else%}
                <h4>Nie ma żadnych zleceń w bazie</h4>
            {%endif%}         
        {%endif%}         
    </div>
{% endblock %}
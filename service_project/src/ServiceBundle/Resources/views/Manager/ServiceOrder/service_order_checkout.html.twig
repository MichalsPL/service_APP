{% extends "ServiceBundle:Manager:base_manager.html.twig" %}
{% block page_content %}

    <h1> Widzisz podsumowanie zlecenia</h1>
    <h4>status zlecenia: {{order.orderStatusId.name}}</h4>
    {{dump(order)}}
    {%if order.orderStatusId.id == 1%}
